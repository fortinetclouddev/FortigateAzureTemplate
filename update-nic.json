{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "nicName": {
      "type": "string"
    },
    "SubnetRef": {
      "type": "string"
    },
    "privateIp": {
      "type": "string"
    },
    "privateIpV6": {
      "type": "string"
    },
    "publicIPID": {
      "type": "string"
    },
    "publicIPNewOrExistingOrNone": {
      "type": "string"
    },
    "location":{
      "type": "string"
    },
    "FortinetTags": {
      "type": "object"
    },
    "NSGName":{
      "type": "string"
    },
	"acceleratedNetwork":{
	  "type": "bool"
	}
  },
  "variables": {
    "NICwPIP": [
      {
        "name": "ipconfig1",
        "properties": {
          "privateIPAllocationMethod": "Static",
          "privateIPAddress": "[parameters('privateIp')]",
          "subnet": {
            "id": "[parameters('SubnetRef')]"
          },
          "publicIPAddress": {
            "id": "[parameters('publicIPID')]"
          }
        }
      },
      {
        "name": "ipconfigv6",
        "properties": {
          "privateIPAllocationMethod": "Static",
          "privateIPAddress": "[parameters('privateIpV6')]",
          "privateIPAddressVersion": "IPv6",
          "subnet": {
            "id": "[parameters('SubnetRef')]"
          }
        }
      }
    ],

    "NICwoPIP": [
      {
        "name": "ipconfig1",
        "properties": {
          "privateIPAllocationMethod": "Static",
          "privateIPAddress": "[parameters('privateIp')]",
          "subnet": {
            "id": "[parameters('SubnetRef')]"
          }
        }
      },
      {
        "name": "ipconfigv6",
        "properties": {
          "privateIPAllocationMethod": "Static",
          "privateIPAddress": "[parameters('privateIpV6')]",
          "privateIPAddressVersion": "IPv6",
          "subnet": {
            "id": "[parameters('SubnetRef')]"
          }
        }
      }
    ]
  },
  "resources": [
    {
      "apiVersion": "2019-04-01",
      "dependsOn": [
      ],
      "tags": {
        "provider": "[toUpper(parameters('FortinetTags').provider)]"
      },
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[parameters('nicName')]",
      "location": "[parameters('location')]",
      "properties": {
        "ipConfigurations": "[if(equals(parameters('publicIPNewOrExistingOrNone'), 'none'), variables('NICwoPIP'), variables('NICwPIP'))]",
        "enableIPForwarding": true,
		"enableAcceleratedNetworking": "[parameters('acceleratedNetwork')]",
        "networkSecurityGroup": {
          "id": "[resourceID('Microsoft.Network/networkSecurityGroups/',parameters('NSGName'))]"
        }
      }
    }
  ],
  "outputs": {}
}