{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location"
      }
    },
    "vnetNewOrExisting": {
      "type": "string"
    },
    "vnetName": {
      "type": "string",
      "metadata": {
        "description": "Virtual Network name (e.g. vnet-haivision)"
      }
    },
    "vnetResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "Virtual Network Resource Group"
      }
    },
    "vnetAddressPrefix": {
      "type": "string",
      "metadata": {
        "description": "Virtual Network Address Prefix (i.e. CIDR)"
      }
    },
    "Subnet1Name": {
      "type": "string",
      "metadata": {
        "description": "Server will be deployed into this subnet within the Virtual Network"
      }
    },
    "subnet1AddressPrefix": {
      "type": "string",
      "metadata": {
        "description": "Virtual Network subnet Address Prefix (i.e. CIDR)"
      }
    },
    "subnet1NextHop": {
      "type": "string"
    },
    "Subnet2Name": {
      "type": "string",
      "metadata": {
        "description": "Server will be deployed into this subnet within the Virtual Network"
      }
    },
    "subnet2AddressPrefix": {
      "type": "string",
      "metadata": {
        "description": "Virtual Network subnet Address Prefix (i.e. CIDR)"
      }
    },
    "subnet2NextHop": {
      "type": "string"
    },
    "routeTable1Name": {
      "type": "string"
    },
    "routeTable2Name": {
      "type": "string"
    },
    "FortinetTags": {
      "type": "object"
    }
  },
  "variables": {
    "vnetID": "[resourceId(parameters('vnetResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
    "subnet1ID": "[concat(variables('vnetID'),'/subnets/',parameters('Subnet1Name'))]",
    "subnet2ID": "[concat(variables('vnetID'),'/subnets/',parameters('Subnet2Name'))]",
    "routeTable1Id": "[resourceId('Microsoft.Network/routeTables',parameters('routeTable1Name'))]",
    "routeTable2Id": "[resourceId('Microsoft.Network/routeTables',parameters('routeTable2Name'))]",
    "apiVer": "2015-06-15"
  },
  "resources": [
    {
      "type": "Microsoft.Network/routeTables",
      "name": "[parameters('routeTable1Name')]",
      "apiVersion": "2015-06-15",
      "tags": {
        "provider": "[toUpper(parameters('FortinetTags').provider)]"
      },
      "location": "[parameters('location')]",
      "properties": {
        "routes": [
          {
            "name": "[concat('to', '-', parameters('Subnet2Name'))]",
            "properties": {
              "addressPrefix": "[parameters('subnet2AddressPrefix')]",
              "nextHopType": "VirtualAppliance",
              "nextHopIpAddress": "[parameters('subnet1NextHop')]"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/routeTables",
      "name": "[parameters('routeTable2Name')]",
      "tags": {
        "provider": "[toUpper(parameters('FortinetTags').provider)]"
      },
      "apiVersion": "2015-06-15",
      "location": "[parameters('location')]",
      "properties": {
        "routes": [
          {
            "name": "[concat('to', '-', parameters('Subnet1Name'))]",
            "properties": {
              "addressPrefix": "[parameters('subnet1AddressPrefix')]",
              "nextHopType": "VirtualAppliance",
              "nextHopIpAddress": "[parameters('subnet1NextHop')]"
            }
          },
          {
            "name": "to-Internet",
            "properties": {
              "AddressPrefix": "0.0.0.0/0",
              "nextHopType": "VirtualAppliance",
              "nextHopIPAddress": "[parameters('subnet1NextHop')]"
            }
          }
        ]
      }
    },
    {
      "condition": "[equals(parameters('vnetNewOrExisting'), 'new')]",
      "apiVersion": "2015-06-15",
      "tags": {
        "provider": "[toUpper(parameters('FortinetTags').provider)]"
      },
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('vnetName')]",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('vnetAddressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[parameters('Subnet1Name')]",
            "properties": {
              "addressPrefix": "[parameters('subnet1AddressPrefix')]",
              "routeTable": {
                "id": "[variables('routeTable1Id')]"
              }
            }
          },
          {
            "name": "[parameters('Subnet2Name')]",
            "properties": {
              "addressPrefix": "[parameters('Subnet2AddressPrefix')]",
              "routeTable": {
                "id": "[variables('routeTable2Id')]"
              }
            }
          }
        ]
      }
    }
  ],
  "outputs": {
  }
}
